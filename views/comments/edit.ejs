<% include ../partials/header %>

<div class="row"
    <div class="page-header">
        <h1 style="text-align: center">Edit Comment</h1>
    </div>
    <form action="/locations/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <button class="btn btn-lg btn-primary">Submit!</button>
    </form>
    <a href="/locations">Go Back</a>
</div>

